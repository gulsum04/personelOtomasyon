@model personelOtomasyon.Models.AkademikIlan

<h2>@Model.Baslik başvurusu</h2>
<hr />

<form asp-action="BasvuruYap" method="post" enctype="multipart/form-data">
    <input type="hidden" name="ilanId" value="@Model.IlanId" />

    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Kriter</th>
                <th>Açıklama</th>
                <th>Belge Yükle</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.KadroKriterleri.Count(); i++)
            {
                var kriter = Model.KadroKriterleri.ElementAt(i);
                <tr>
                    <td>@kriter.KriterAdi</td>
                    <td>@kriter.Aciklama</td>
                    <td>
                        @if (kriter.BelgeYuklenecekMi || kriter.ZorunluMu)
                        {
                            <input type="file" name="belgeler" class="form-control" required="@kriter.ZorunluMu" />
                            <input type="hidden" name="belgeTurleri" value="@kriter.KriterAdi" />
                        }
                        else
                        {
                            <span class="text-muted">Belge gerekmiyor</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Başvuruyu Gönder</button>
</form>
