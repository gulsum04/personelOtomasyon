@model IEnumerable<personelOtomasyon.Models.AkademikIlan>

<h2>Yayındaki İlanlar</h2>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var ilan in Model)
    {
        <div class="col d-flex">
            <div class="card h-100 w-100 @(ViewData["BasvuruDurumu" + ilan.IlanId]?.ToString() == "Başvuruldu" ? "border-success" : "")">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@ilan.Baslik</h5>
                    <p class="card-text"><strong>Temel Alan:</strong> @ilan.TemelAlan</p>
                    <p class="card-text"><strong>Kategori:</strong> @ilan.Kategori</p>
                    <p class="card-text"><strong>Başvuru Tarihleri:</strong> @ilan.BasvuruBaslangicTarihi.ToShortDateString() - @ilan.BasvuruBitisTarihi.ToShortDateString()</p>

@if (TempData["Uyari"] != null)
{
    <div id="toastUyari" class="toast align-items-center text-bg-warning border-0 position-fixed top-0 end-0 m-3"
         role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                @TempData["Uyari"]
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                    aria-label="Kapat"></button>
        </div>
    </div>
}

@if (!Model.Any())
{
    <p>Henüz ilan bulunmamaktadır.</p>
}
else
{
    <div class="row">
        @foreach (var ilan in Model)
        {
            <div class="col-md-6 d-flex">
                <div class="card mb-3 h-100 w-100">
                    <div class="card-body d-flex flex-column">
                        <h5>@ilan.Baslik (@ilan.Kategori)</h5>
                        <p class="flex-grow-1">@ilan.Aciklama</p>
                        <p><strong>Başvuru:</strong> @ilan.BasvuruBaslangicTarihi.ToShortDateString() - @ilan.BasvuruBitisTarihi.ToShortDateString()</p>
                        <div class="mt-auto">
                            <a class="btn btn-primary me-2" asp-action="Basvur" asp-route-id="@ilan.IlanId">Başvuru Yap</a>
                            <a class="btn btn-primary" asp-action="BasvuruDetay" asp-route-id="@ilan.IlanId">Başvuru Detayı</a>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
}
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var toastEl = document.getElementById('toastUyari');
            if (toastEl) {
                var toast = new bootstrap.Toast(toastEl, { delay: 3000 });
                toast.show();
            }
        });
    </script>
}