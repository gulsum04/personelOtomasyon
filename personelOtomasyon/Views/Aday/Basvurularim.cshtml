@model IEnumerable<personelOtomasyon.Models.Basvuru>

@{
    ViewData["Title"] = "Başvurularım";
}

<h2 class="mb-4">Başvurularım</h2>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-warning">
        Henüz hiçbir ilana başvurmadınız.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-light">
                <tr>
                    <th>İlan Başlığı</th>
                    <th>Kategori</th>
                    <th>Temel Alan</th>
                    <th>Başvuru Tarihi</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var basvuru in Model)
                {
                    <tr>
                        <td>@basvuru.Ilan?.Baslik</td>
                        <td>@basvuru.Ilan?.Kategori</td>
                        <td>@basvuru.Ilan?.TemelAlan</td>
                        <td>@basvuru.BasvuruTarihi.ToShortDateString()</td>

                        <!-- 🧩 DURUM Hesaplama -->
                        <td>
                            @{
                                string gosterilecekDurum = basvuru.Durum;

                                if (!string.IsNullOrEmpty(basvuru.JuriSonucu))
                                {
                                    if (basvuru.JuriSonucu == "Olumsuz")
                                    {
                                        gosterilecekDurum = "Reddedildi";
                                    }
                                    else if (basvuru.JuriSonucu == "Olumlu")
                                    {
                                        gosterilecekDurum = "Beklemede"; // Şu an için beklemede kalacak
                                    }
                                }
                            }

                            @switch (gosterilecekDurum)
                            {
                                case "Beklemede":
                                    <span class="badge bg-warning">Beklemede</span>
                                    break;
                                case "Onaylandı":
                                    <span class="badge bg-success">Onaylandı</span>
                                    break;
                                case "Reddedildi":
                                    <span class="badge bg-danger">Reddedildi</span>
                                    break;
                                default:
                                    <span class="badge bg-dark">@gosterilecekDurum</span>
                                    break;
                            }
                        </td>

                        <!-- 🧩 İŞLEMLER -->
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="BasvuruDetay" asp-route-id="@basvuru.BasvuruId" class="btn btn-sm btn-outline-primary">
                                    Detay
                                </a>
                                <form asp-action="BasvuruSil" asp-route-id="@basvuru.BasvuruId" method="post" class="d-inline" onsubmit="return confirm('Başvurunuzu silmek istediğinize emin misiniz?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        Sil
                                    </button>
                                </form>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
}
