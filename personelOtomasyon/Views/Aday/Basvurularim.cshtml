@model IEnumerable<personelOtomasyon.Models.Basvuru>

<h2>Başvurularım</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">Henüz başvuru yapmadınız.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>İlan Başlığı</th>
                <th>Kategori</th>
                <th>Temel Alan</th>
                <th>Başvuru Tarihi</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var basvuru in Model)
            {
                <tr>
                    <td>@basvuru.Ilan.Baslik</td>
                    <td>@basvuru.Ilan.Kategori</td>
                    <td>@basvuru.Ilan.TemelAlan</td>
                    <td>@basvuru.BasvuruTarihi.ToShortDateString()</td>
                    <td>
                        @if (basvuru.Durum == "Beklemede")
                        {
                            <span class="badge bg-secondary">
                                <i class="bi bi-hourglass-split"></i> Beklemede
                            </span>
                        }
                        else if (basvuru.Durum == "Onaylandı")
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle-fill"></i> Onaylandı
                            </span>
                        }
                        else if (basvuru.Durum == "Reddedildi")
                        {
                            <span class="badge bg-danger">
                                <i class="bi bi-x-circle-fill"></i> Reddedildi
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-dark">@basvuru.Durum</span>
                        }
                    </td>
                    <td>
                        <a asp-action="BasvuruDetay" asp-route-id="@basvuru.BasvuruId" class="btn btn-sm btn-outline-info">Detay</a>

                        <!-- Başvuru Silme Butonu -->
                        <form asp-action="BasvuruSil" asp-route-id="@basvuru.BasvuruId" method="post" class="d-inline" onsubmit="return confirm('Başvuruyu silmek istediğinizden emin misiniz?');">
                            <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
