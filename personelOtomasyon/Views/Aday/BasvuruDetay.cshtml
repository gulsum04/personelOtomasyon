@model personelOtomasyon.Models.Basvuru

<h2>Başvuru Detayları</h2>

<!-- Başvuru Detayları görüntülenecek kısmı -->
<div>
    <h4>@Model.Ilan.Baslik</h4>
    <p><strong>Kategori:</strong> @Model.Ilan.Kategori</p>
    <p><strong>Temel Alan:</strong> @Model.Ilan.TemelAlan</p>
    <p><strong>Açıklama:</strong> @Model.Ilan.Aciklama</p>
    <p><strong>Başvuru Tarihleri:</strong> @Model.Ilan.BasvuruBaslangicTarihi.ToShortDateString() - @Model.Ilan.BasvuruBitisTarihi.ToShortDateString()</p>

    <h4>Kadro Kriterleri:</h4>
    <ul>
        @foreach (var kriter in Model.Ilan.KadroKriterleri)
        {
            <li><strong>@kriter.KriterAdi:</strong> @kriter.Aciklama</li>
        }
    </ul>

    @if (Model.Belgeler != null && Model.Belgeler.Any())
    {
        <h4>Yüklenen Belgeler:</h4>
        <ul>
            @foreach (var belge in Model.Belgeler)
            {
                <li><strong>@belge.BelgeTuru:</strong> <a href="@belge.DosyaYolu" target="_blank">İndir</a></li>
            }
        </ul>
    }
</div>

<a href="@Url.Action("Index", "Aday")" class="btn btn-secondary mt-3">Geri Dön</a>
