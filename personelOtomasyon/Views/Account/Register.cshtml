@using personelOtomasyon.Data.ViewModels
@model RegisterVM

@{
    ViewData["Title"] = "Kaydol";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <h4>Yeni Hesaba Kaydolun</h4>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <strong>Hata:</strong> @TempData["Error"]
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">

                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TcKimlikNo" class="control-label"></label>
                        <input asp-for="TcKimlikNo" class="form-control" type="text" />
                        <span asp-validation-for="TcKimlikNo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DogumYili" class="control-label"></label>
                        <input asp-for="DogumYili" class="form-control" type="number" min="1900" />
                        <span asp-validation-for="DogumYili" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-between mt-4">
                        <input class="btn btn-outline-success" type="submit" value="Kaydol" />
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Geri</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
