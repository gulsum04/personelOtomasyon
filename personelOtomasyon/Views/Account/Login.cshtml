@using personelOtomasyon.Data.ViewModels
@model LoginVM

@{
    ViewData["Title"] = "Hesabınıza Giriş Yapın";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <h4 class="mb-3">Hesabınıza Giriş Yapın</h4>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <strong>Hata:</strong> @TempData["Error"]
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Login">

                    <!--  Rolü gizli olarak taşıyoruz -->
                    <input type="hidden" asp-for="RequestedRole" />

                    <div class="form-group">
                        <label asp-for="TcKimlikNo" class="control-label"></label>
                        <input asp-for="TcKimlikNo" class="form-control" type="text" />
                        <span asp-validation-for="TcKimlikNo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex justify-content-between mt-3">
                        <input class="btn btn-outline-success" type="submit" value="Giriş" />
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Geri</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
