@model personelOtomasyon.Models.AkademikIlan

@{
    ViewData["Title"] = "İlan Düzenle";
}

<h2 class="mb-4">📝 İlanı Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IlanId" />

    <div class="form-group">
        <label asp-for="Baslik">Başlık</label>
        <input asp-for="Baslik" class="form-control" />
        <span asp-validation-for="Baslik" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Kategori">Kategori</label>
        <select asp-for="Kategori" class="form-control">
            <option value="">-- Seçiniz --</option>
            <option value="Dr. Öğretim Üyesi">Dr. Öğretim Üyesi</option>
            <option value="Doçent">Doçent</option>
            <option value="Profesör">Profesör</option>
        </select>
        <span asp-validation-for="Kategori" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Aciklama">Açıklama</label>
        <textarea asp-for="Aciklama" class="form-control"></textarea>
        <span asp-validation-for="Aciklama" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BasvuruBaslangicTarihi">Başvuru Başlangıç Tarihi</label>
        <input asp-for="BasvuruBaslangicTarihi" type="date" class="form-control" />
        <span asp-validation-for="BasvuruBaslangicTarihi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BasvuruBitisTarihi">Başvuru Bitiş Tarihi</label>
        <input asp-for="BasvuruBitisTarihi" type="date" class="form-control" />
        <span asp-validation-for="BasvuruBitisTarihi" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Geri</a>
</form>
